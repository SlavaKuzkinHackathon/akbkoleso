@model IEnumerable<akbkoleso.Models.Admin.Catalog.Podbor_akb>

    <div class="row justify-content-around">
        <h4 class="p-2 bg-secondary text-white text-center col-md-10">Каталог по подбору аккумуляторов</h4>

        <div class="text-center">
            @Html.Partial("Pages", Model)

            @{
                ViewBag.searches = new string[] { "Vendor", "Car" };
                ViewBag.sorts = new string[] { "Id", "Mochnost", "Modification" };
            }
            @Html.Partial("PageOptions", Model)
        </div>

        <br>
            <div class="table-responsive">
                <table class="table table-sm table-striped">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Марка</th>
                            <th>Модель</th>
                            <th>Модификация</th>
                            <th>Дата начала выпуска</th>
                            <th>Дата окончания выпуска</th>
                            <th>Мощность</th>
                            <th>Емкость от</th>
                            <th>Емкость до</th>
                            <th>Полярность</th>
                            <th>Длина</th>
                            <th>Ширина</th>
                            <th>Высота</th>
                            <th>Диаметр клем</th>
                            <th>Ток холодной прокрутки</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var g in Model)
                        {
                            <tr>
                                <td>@g.Id</td>
                                <td>@g.Vendor</td>
                                <td>@g.Car</td>
                                <td>@g.Modification</td>
                                <td>@g.Date_start</td>
                                <td>@g.Date_end</td>
                                <td>@g.Mochnost</td>
                                <td>@g.Emkost_ot</td>
                                <td>@g.Emkost_do</td>
                                <td>@g.Polarnost</td>
                                <td>@g.Dlina</td>
                                <td>@g.Shirina</td>
                                <td>@g.Visota</td>
                                <td>@g.Diametr_klem</td>
                                <td>@g.Tok_xol_prok</td>

                                <td>
                                    <form asp-action="Delete" method="post">
                                        <a asp-action="Generate" class="btn btn-primary btn-sm" asp-route-id="@g.Id">Шаблон</a>
                                        <a asp-action="Edit"
                                           class="btn btn-sm btn-warning" asp-route-id="@g.Id">
                                            Изменить
                                        </a>
                                        <input type="hidden" name="Id" value="@g.Id" />
                                        <button type="submit" class="btn btn-danger btn-sm">
                                            Удалить
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br>
                <a asp-action="Create" class="btn btn-primary">Создать новый параметр</a>
            </div>
        </div>