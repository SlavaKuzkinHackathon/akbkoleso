
<div class="row">
    <div class="col-md-3">
        <div class="list-group my-4">
            @await Html.PartialAsync("_LayoutAdmin")
        </div>
    </div>
    <div class="col-md-9 my-4">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <h4>Добавление роли</h4>
                        <hr />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <form asp-action="CreateRole" method="post">
                            <div asp-validation-summary="All" class="text-danger offset-4 col-8"></div>
                            <div class="form-group row">
                                <label for="name" class="col-4 col-form-label">Название новой роли</label>
                                <div class="col-8">
                                    <input name="name" class="form-control" type="text">
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="offset-4 col-8 text-right">
                                    <button type="submit" class="btn btn-info">Сохранить</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
